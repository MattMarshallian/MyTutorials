<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tutorial.marcin.manggha1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/manggha_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllExibitsActivity"
            android:label="@string/title_activity_all_exibits"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SingleExibitActivity"
            android:label="@string/title_activity_single_exibit"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".AllExhibitsCarouselActivity"></activity>
    </application>

</manifest>
